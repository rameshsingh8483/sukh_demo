<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:slidemenu="http://schemas.android.com/apk/res-auto"

    tools:context=".MainActivity"
    slidemenu:layout_role="content"
    android:background="@color/white"

    >



    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/_40sdp"
        >


    </FrameLayout>

    <com.eightbitlab.bottomnavigationbar.BottomNavigationBar
        android:id="@+id/navigation_bar"
        android:background="@color/white"
        app:activeTabColor="@color/colorPrimary"
        app:inactiveTabColor="@color/black"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"


        />

</RelativeLayout>